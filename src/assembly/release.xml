<?xml version='1.0' encoding='UTF-8'?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>release</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<dependencySets>
		<dependencySet>
			<scope>runtime</scope>
			<unpack>false</unpack>
			<outputDirectory>polygonsSWP/lib</outputDirectory>
			<includes>
				<include>*:dll*</include>
				<include>*:so*</include>
			</includes>
		</dependencySet>
	</dependencySets>
	
	<fileSets>
		<fileSet>
			<directory>src</directory>
			<outputDirectory>polygonsSWP/source/src</outputDirectory>
		</fileSet>
	</fileSets>
	
	<files>
		<file>
			<source>target/${project.artifactId}-bin.jar</source>
			<outputDirectory>polygonsSWP/</outputDirectory>
		</file>
		<file>
			<source>pom.xml</source>
			<outputDirectory>polygonsSWP/source</outputDirectory>
		</file>
		<file>
			<source>src/assembly/README</source>
			<outputDirectory>polygonsSWP/</outputDirectory>
		</file>
		<file>
			<source>src/assembly/run.sh</source>
			<outputDirectory>polygonsSWP/</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>src/assembly/batch.sh</source>
			<outputDirectory>polygonsSWP/</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>polygons-coding-style.xml</source>
			<outputDirectory>polygonsSWP/source</outputDirectory>
		</file>
	</files>
</assembly>
